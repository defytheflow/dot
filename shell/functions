#!/usr/bin/env sh

# File:     functions
# Created:  30.12.2019
# Author:   Artyom Danilov (@defytheflow)

# Execute command's --help option.
help() {
  [ "$#" -ne 0 ] && eval "$*" --help
}

# Execute `npx <command> --version`
vx() {
  [ "$#" -ne 0 ] && eval npx "$*" --version
}

# Combined mkdir and cd.
mkcdir() {
  # -P - resolve symbolic links
  mkdir -p -- "$1" && cd -P -- "$1"
}

# Reload current running shell.
rld() {
  [ -n "${ZSH_NAME}" ] && exec zsh || [ -n "${BASH}" ] && exec bash
}

# Print each path entry on a newline.
path() {
  echo "${PATH}" | sed -e 's|:|\n|g'
}

# Print all the terminal colors.
_256() {
  for i in $(seq 0 255); do
    printf '\e[48;5;%dm%3d ' "${i}" "${i}"
    val=$(((i + 3) % 18))
    [ ${val} -eq 0 ] && printf '\e[0m\n'
  done
}

# Print number of entries in a directory.
num() {
  [ -n "${1}" ] && dir=${1} || dir=.
  \ls -A "${dir}" | wc -l
}

# Print each whereis entry on a newline.
whereis() {
  command whereis "$@" | sed -e 's/ /\n/g'
}

# Set terminal title.
title() {
  printf "\033]0;%s\007" "${*}"
}

# Set background image.
setbg() {
  if [ -f "${1}" ] && command -v nitrogen >/dev/null; then
    nitrogen --head=xinerama --set-auto "${1}" && cp "${1}" "${WALLPAPER_HOME}"
  else
    return 1
  fi
}

{
  "keyboard.dispatch": "keyCode",

  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorSurroundingLines": 10,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.fontFamily": "MonoLisa, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.folding": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [90],
  "editor.smoothScrolling": true,
  "editor.suggest.insertMode": "replace",
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "editor.lineHeight": 24,
  "editor.minimap.enabled": false,

  "explorer.openEditors.visible": 0,

  "search.mode": "reuseEditor",
  "search.searchEditor.doubleClickBehaviour": "openLocationToSide",

  "workbench.colorTheme": "Night Owl (No Italics)",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#333",
    "[Night Owl]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "editorGroup.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    },
    "[Night Owl (No Italics)]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "editorGroup.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    }
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.panel.defaultLocation": "bottom",
  // "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.commandsToSkipShell": ["-workbench.action.terminal.focusFind"],

  "files.associations": {
    ".env": "shellscript",
    ".env.*": "shellscript",
    "Pipfile": "toml"
  },
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.exclude": {
    "**/.git/**": true,
    "**/.venv/**": false,
    "**/*cache*/**": true,
    "**/*coverage*/**": true
  },
  "files.hotExit": "onExit",
  "files.trimTrailingWhitespace": true,

  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4
  },

  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": ["--exclude=*/migrations/*"],

  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  // "python.linting.mypyArgs": ["--strict", "--show-error-codes"],
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.ignorePatterns": ["**/site-packages/**/*.py"],

  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  "vim.leader": "\\",
  "vim.textwidth": 90,
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    // {
    //   "before": ["{"],
    //   "after": ["{", "z", "z"]
    // },
    // {
    //   "before": ["}"],
    //   "after": ["}", "z", "z"]
    // },
    // {
    //   "before": ["<C-u>"],
    //   "after": ["<C-u>", "z", "z"]
    // },
    // {
    //   "before": ["<C-d>"],
    //   "after": ["<C-d>", "z", "z"]
    // },
    {
      "before": ["<Enter>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-l>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-m>"],
      "commands": ["editor.action.toggleMinimap"]
    },
    {
      "before": ["<leader>", "<leader>"],
      "after": ["<C-^>"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleCenteredLayout"]
    },
    {
      "before": ["<leader>", "v", "e"],
      "commands": ["workbench.action.openSettingsJson"]
    },
    {
      "before": ["g", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "s"],
      "commands": ["references-view.find"]
    },
    {
      "before": ["]", "<space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["[", "<space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["]", "b"],
      "after": ["g", "t"]
    },
    {
      "before": ["[", "b"],
      "after": ["g", "T"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["[", "g"],
      "commands": ["editor.action.marker.next", "closeMarkersNavigation"]
    },
    {
      "before": ["]", "g"],
      "commands": ["editor.action.marker.prev", "closeMarkersNavigation"]
    }
  ],

  "tabnine.experimentalAutoImports": true,

  "todo-tree.regex.regexCaseSensitive": false,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX", "[ ]", "[x]"],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "background": "#00b248",
      "foreground": "#66ffa6",
      "type": "text"
    },
    "FIXME": {
      "background": "#c79400",
      "foreground": "#fff64f",
      "type": "text"
    },
    "BUG": {
      "background": "#ff0033",
      "foreground": "#f1f1f1",
      "type": "text"
    },
    "HACK": {
      "background": "#3943b7",
      "foreground": "#78f0e0",
      "type": "text"
    }
  },

  "cSpell.ignoreRegExpList": [
    "asgi",
    "dotenv",
    "isort",
    "isdigit",
    "noqa",
    "pipenv",
    "psql",
    "pytest",
    "redux",
    "stylelint",
    "yapf",
    "yasg",
    "zfill",
    "ipdb"
  ],

  "window.zoomLevel": -1
}
